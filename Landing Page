import React, { useState, useEffect } from 'react';
import { Upload, Figma, Github, FileCode, Database, Smartphone, Globe, Image, Zap, Settings, Code, Eye, Download, ArrowRight, Sparkles, Layers, Box, Rocket, Video, DollarSign, FileText, Scale, Users, HardDrive, MessageSquare, BarChart3, Calendar, Clock, CheckCircle2, Star } from 'lucide-react';

const Verge = () => {
  const [showApp, setShowApp] = useState(false);
  const [mousePos, setMousePos] = useState({ x: 0, y: 0 });
  const [isAuthenticated, setIsAuthenticated] = useState(false);
  const [currentModuleIndex, setCurrentModuleIndex] = useState(0);

  useEffect(() => {
    const handleMouseMove = (e) => {
      setMousePos({ x: e.clientX, y: e.clientY });
    };
    
    window.addEventListener('mousemove', handleMouseMove);
    
    return () => {
      window.removeEventListener('mousemove', handleMouseMove);
    };
  }, []);

  useEffect(() => {
    if (showApp) return;

    const handleScroll = () => {
      const modulesSection = document.querySelector('#modules-section');
      if (!modulesSection) return;

      const rect = modulesSection.getBoundingClientRect();
      const scrollProgress = -rect.top / (rect.height - window.innerHeight);
      
      if (scrollProgress >= 0 && scrollProgress <= 1) {
        const moduleIndex = Math.floor(scrollProgress * 11);
        const clampedIndex = Math.max(0, Math.min(10, moduleIndex));
        
        if (clampedIndex !== currentModuleIndex) {
          setCurrentModuleIndex(clampedIndex);
        }

        for (let idx = 0; idx < 11; idx++) {
          const moduleEl = document.getElementById(`module-${idx}`);
          const dotEl = document.getElementById(`dot-${idx}`);
          
          if (moduleEl && dotEl) {
            if (idx === clampedIndex) {
              moduleEl.style.opacity = '1';
              moduleEl.style.transform = 'scale(1)';
              moduleEl.style.pointerEvents = 'auto';
              dotEl.style.background = 'linear-gradient(90deg, #a855f7, #ec4899)';
              dotEl.style.width = '32px';
              
              for (let i = 0; i < 4; i++) {
                const featureEl = document.getElementById(`feature-${idx}-${i}`);
                if (featureEl) {
                  setTimeout(() => {
                    featureEl.style.opacity = '1';
                    featureEl.style.transform = 'translateX(0)';
                  }, i * 100);
                }
              }
            } else {
              moduleEl.style.opacity = '0';
              moduleEl.style.transform = idx < clampedIndex ? 'scale(0.8) translateX(-100px)' : 'scale(0.8) translateX(100px)';
              moduleEl.style.pointerEvents = 'none';
              dotEl.style.background = 'rgba(255, 255, 255, 0.2)';
              dotEl.style.width = '8px';
              
              for (let i = 0; i < 4; i++) {
                const featureEl = document.getElementById(`feature-${idx}-${i}`);
                if (featureEl) {
                  featureEl.style.opacity = '0';
                  featureEl.style.transform = 'translateX(-20px)';
                }
              }
            }
          }
        }
      }
    };

    setTimeout(() => {
      const firstModule = document.getElementById('module-0');
      const firstDot = document.getElementById('dot-0');
      if (firstModule) {
        firstModule.style.opacity = '1';
        firstModule.style.transform = 'scale(1)';
        firstModule.style.pointerEvents = 'auto';
      }
      if (firstDot) {
        firstDot.style.background = 'linear-gradient(90deg, #a855f7, #ec4899)';
        firstDot.style.width = '32px';
      }
      for (let i = 0; i < 4; i++) {
        const featureEl = document.getElementById(`feature-0-${i}`);
        if (featureEl) {
          setTimeout(() => {
            featureEl.style.opacity = '1';
            featureEl.style.transform = 'translateX(0)';
          }, i * 100);
        }
      }
    }, 100);

    window.addEventListener('scroll', handleScroll);
    handleScroll();

    return () => {
      window.removeEventListener('scroll', handleScroll);
    };
  }, [currentModuleIndex, showApp]);

  const handleAuth = (provider) => {
    setIsAuthenticated(true);
    setTimeout(() => {
      setShowApp(true);
    }, 500);
  };

  const modules = [
    { id: 'dev', name: 'Verge Dev', icon: Code, color: 'from-purple-500 to-pink-500', tagline: 'From design to deployment in one breath', desc: 'Full-stack development with AI assistance. Import designs, write code, deploy instantly.', features: ['AI Code Generation', 'Design Import', 'One-Click Deploy', 'Git Integration'] },
    { id: 'docs', name: 'Verge Docs', icon: FileText, color: 'from-blue-500 to-cyan-500', tagline: 'Living documents that evolve with you', desc: 'Intelligent documentation that auto-updates as your projects grow.', features: ['Real-Time Collab', 'AI Summaries', 'Version History', 'Smart Templates'] },
    { id: 'meet', name: 'Verge Meet', icon: Video, color: 'from-green-500 to-emerald-500', tagline: 'Meetings that actually matter', desc: 'Video calls with AI transcription, summaries, and automatic action items.', features: ['AI Transcription', 'Action Items', 'Smart Scheduling', 'Auto Summaries'] },
    { id: 'finance', name: 'Verge Finance', icon: DollarSign, color: 'from-yellow-500 to-orange-500', tagline: 'Money moves at the speed of thought', desc: 'Automated invoicing, expense tracking, and financial forecasting.', features: ['Invoice Automation', 'Expense Tracking', 'Tax Reporting', 'Budget Forecasting'] },
    { id: 'projects', name: 'Verge Projects', icon: BarChart3, color: 'from-red-500 to-pink-500', tagline: 'Project management, amplified', desc: 'AI-powered task management with smart assignments and timeline prediction.', features: ['AI Task Assignment', 'Timeline Prediction', 'Resource Planning', 'Team Analytics'] },
    { id: 'legal', name: 'Verge Legal', icon: Scale, color: 'from-indigo-500 to-purple-500', tagline: 'Contracts without the chaos', desc: 'Generate, review, and sign contracts with AI-powered legal assistance.', features: ['Contract Generation', 'AI Review', 'E-Signatures', 'Compliance Tracking'] },
    { id: 'hr', name: 'Verge HR', icon: Users, color: 'from-teal-500 to-green-500', tagline: 'People operations, simplified', desc: 'Onboarding, time-off, performance reviews, and payroll in one place.', features: ['Onboarding Flows', 'Time-Off Tracking', 'Performance Reviews', 'Payroll Integration'] },
    { id: 'drive', name: 'Verge Drive', icon: HardDrive, color: 'from-gray-500 to-slate-500', tagline: 'Cloud storage that thinks', desc: 'Unlimited storage with AI-powered search and automatic organization.', features: ['Unlimited Storage', 'AI Search', 'Version Control', 'Smart Organization'] },
    { id: 'chat', name: 'Verge Chat', icon: MessageSquare, color: 'from-violet-500 to-purple-500', tagline: 'Communication, connected', desc: 'Team messaging that integrates with every module for seamless collaboration.', features: ['Thread Summaries', 'AI Answers', 'File Sharing', 'Voice Messages'] },
    { id: 'sheets', name: 'Verge Sheets', icon: Layers, color: 'from-cyan-500 to-blue-500', tagline: 'Spreadsheets, reimagined', desc: 'AI-powered spreadsheets with natural language formulas and live data connectors.', features: ['AI Formulas', 'Live Data', 'Auto Visualization', 'Collaborative Editing'] },
    { id: 'cloud', name: 'Verge Cloud', icon: Rocket, color: 'from-orange-500 to-red-500', tagline: 'Deploy at the speed of light', desc: 'One-click deployment with automatic scaling, SSL, and global CDN.', features: ['Auto Scaling', 'SSL Included', 'Global CDN', 'Zero Config'] }
  ];

  const pricingPlans = [
    { id: 'students', name: 'Verge for Students', price: '$20', period: '/year', highlight: 'Free across Africa', features: ['Full access to all 11 modules', '7-day memory reset', '5GB Verge Drive storage', 'Community support', 'Perfect for learning & side projects'], cta: 'Get Started', popular: false },
    { id: 'teams', name: 'Verge for Teams', price: '$50', period: '/month per workspace', highlight: 'Up to 10 users', features: ['Unlimited memory & context', '1TB Verge Drive storage', 'Priority support', 'Custom integrations', 'Advanced analytics'], cta: 'Get Started', popular: true },
    { id: 'enterprise', name: 'Verge for Enterprise', price: '$50', period: '/month per user', highlight: 'Minimum 25 users', features: ['Unlimited everything', 'Dedicated AI models', 'SOC 2, HIPAA, GDPR compliance', 'White-label options', '24/7 enterprise support'], cta: 'Contact Sales', popular: false }
  ];

  const testimonials = [
    { name: 'Sarah Chen', role: 'CTO, TechFlow', avatar: 'üë©‚Äçüíª' },
    { name: 'Marcus Johnson', role: 'Founder, Startup Inc', avatar: 'üë®‚Äçüíº' },
    { name: 'Lisa Martinez', role: 'Designer, Creative Co', avatar: 'üë©‚Äçüé®' },
    { name: 'David Kim', role: 'Developer, Code Labs', avatar: 'üë®‚Äçüíª' },
    { name: 'Emma Wilson', role: 'PM, Product Studio', avatar: 'üë©‚ÄçüöÄ' }
  ];

  if (showApp) {
    return (
      <div className="min-h-screen bg-black text-white">
        <header className="border-b border-white/10 bg-black/50 backdrop-blur-xl sticky top-0 z-50">
          <div className="container mx-auto px-6 py-4">
            <div className="flex items-center justify-between">
              <div className="flex items-center gap-6">
                <div className="flex items-center gap-3">
                  <div className="w-10 h-10 bg-gradient-to-br from-purple-500 to-pink-500 rounded-lg flex items-center justify-center">
                    <Sparkles className="w-6 h-6" />
                  </div>
                  <div>
                    <h1 className="text-xl font-bold">Verge</h1>
                    <p className="text-xs text-gray-500">The Obsidian Studios</p>
                  </div>
                </div>
              </div>
              <div className="flex items-center gap-4">
                <button className="p-2 hover:bg-white/5 rounded-lg transition-all">
                  <MessageSquare className="w-5 h-5" />
                </button>
                <div className="w-8 h-8 bg-gradient-to-br from-purple-500 to-pink-500 rounded-full" />
              </div>
            </div>
          </div>
        </header>
        <div className="container mx-auto px-6 py-8">
          <div className="mb-8">
            <h2 className="text-3xl font-bold mb-2">Welcome back to Verge</h2>
            <p className="text-gray-400">Your entire organization, unified by intelligence.</p>
          </div>
        </div>
      </div>
    );
  }

  return (
    <div className="relative min-h-screen bg-black text-white overflow-hidden">
      <div className="fixed inset-0 z-0">
        <div className="absolute inset-0 opacity-30" style={{ background: `radial-gradient(circle at ${mousePos.x}px ${mousePos.y}px, rgba(168, 85, 247, 0.4), transparent 50%)`, transition: 'background 0.3s ease' }} />
        <div className="absolute inset-0 bg-gradient-to-br from-purple-900/20 via-black to-pink-900/20" />
        <div className="absolute top-20 left-20 w-96 h-96 bg-purple-500/30 rounded-full blur-3xl animate-pulse" />
        <div className="absolute bottom-20 right-20 w-96 h-96 bg-pink-500/30 rounded-full blur-3xl animate-pulse" />
      </div>

      <div className="relative z-10">
        <header className="container mx-auto px-6 py-8">
          <div className="flex items-center justify-between">
            <div className="flex items-center gap-3 group cursor-pointer">
              <div className="relative">
                <div className="absolute inset-0 bg-gradient-to-br from-purple-500 to-pink-500 rounded-xl blur-lg opacity-50 group-hover:opacity-100 transition-opacity" />
                <div className="relative w-12 h-12 bg-gradient-to-br from-purple-500 to-pink-500 rounded-xl flex items-center justify-center transform group-hover:scale-110 transition-transform">
                  <Sparkles className="w-7 h-7" />
                </div>
              </div>
              <div>
                <h1 className="text-3xl font-bold bg-gradient-to-r from-purple-400 via-pink-400 to-purple-400 bg-clip-text text-transparent">Verge</h1>
                <p className="text-xs text-gray-400">by The Obsidian Studios</p>
              </div>
            </div>
            {!isAuthenticated ? (
              <button onClick={() => setIsAuthenticated(true)} className="group relative px-6 py-3 bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl font-semibold hover:bg-white/10 transition-all overflow-hidden">
                <span className="relative z-10">Sign In</span>
              </button>
            ) : (
              <button onClick={() => setShowApp(true)} className="group relative px-6 py-3 bg-gradient-to-r from-purple-500 to-pink-500 rounded-xl font-semibold overflow-hidden">
                <span className="relative z-10">Open Workspace</span>
              </button>
            )}
          </div>
        </header>

        <section id="hero" className="container mx-auto px-6 py-20">
          <div className="grid lg:grid-cols-2 gap-12 items-center">
            <div>
              <div className="inline-flex items-center gap-2 px-4 py-2 bg-purple-500/20 border border-purple-500/30 rounded-full text-sm font-medium text-purple-300 mb-6">
                <div className="w-2 h-2 bg-purple-500 rounded-full animate-pulse" />
                The AI power core
              </div>
              <h1 className="text-6xl lg:text-7xl font-bold mb-6 leading-tight">
                Transform Raw Data,
                <br />
                <span className="bg-gradient-to-r from-purple-400 via-pink-400 to-purple-400 bg-clip-text text-transparent">Into Intelligent Actions</span>
              </h1>
              <p className="text-xl text-gray-400 mb-8 max-w-xl leading-relaxed">Feed your data into Verge to analyze, predict, and automate ‚Äî all in one intelligent system.</p>
              <div className="flex items-center gap-4 mb-12">
                <button className="group relative px-8 py-4 bg-gradient-to-r from-purple-500 to-pink-500 rounded-xl font-bold text-lg overflow-hidden transform hover:scale-105 transition-all">
                  <span className="relative z-10">Get Started</span>
                </button>
                <button className="group relative flex items-center gap-2 px-8 py-4 bg-white/5 border border-white/10 rounded-xl font-bold text-lg hover:bg-white/10 transition-all overflow-hidden">
                  <span className="relative z-10">See How It Works</span>
                  <ArrowRight className="w-5 h-5 relative z-10" />
                </button>
              </div>
              <div>
                <div className="flex items-center gap-2 mb-3">
                  {testimonials.map((person, i) => (
                    <div key={i} className="w-10 h-10 rounded-full bg-gradient-to-br from-purple-400 to-pink-400 flex items-center justify-center text-white text-lg border-2 border-black -ml-2 first:ml-0">{person.avatar}</div>
                  ))}
                </div>
                <p className="text-sm text-gray-400">Rated 5/5 by hundreds of organizations like you</p>
              </div>
            </div>
            <div className="relative">
              <div className="relative w-full h-full flex items-center justify-center">
                <div className="relative w-full aspect-square max-w-lg">
                  <div className="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-32 h-32 bg-gradient-to-br from-purple-500 to-pink-500 rounded-full opacity-80 blur-xl animate-pulse" />
                  <div className="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full h-full">
                    <div className="absolute top-0 left-1/2 -translate-x-1/2 w-16 h-16 bg-gradient-to-br from-purple-500 to-pink-500 rounded-xl flex items-center justify-center shadow-2xl animate-float">
                      <Code className="w-8 h-8" />
                    </div>
                    <div className="absolute top-1/2 right-0 -translate-y-1/2 w-16 h-16 bg-gradient-to-br from-blue-500 to-cyan-500 rounded-xl flex items-center justify-center shadow-2xl animate-float-delay-1">
                      <Database className="w-8 h-8" />
                    </div>
                    <div className="absolute bottom-0 left-1/2 -translate-x-1/2 w-16 h-16 bg-gradient-to-br from-orange-500 to-red-500 rounded-xl flex items-center justify-center shadow-2xl animate-float-delay-2">
                      <Rocket className="w-8 h-8" />
                    </div>
                    <div className="absolute top-1/2 left-0 -translate-y-1/2 w-16 h-16 bg-gradient-to-br from-green-500 to-emerald-500 rounded-xl flex items-center justify-center shadow-2xl animate-float-delay-3">
                      <Users className="w-8 h-8" />
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>

        <section id="modules-section" className="relative h-[500vh]">
          <div className="sticky top-0 h-screen flex items-center justify-center overflow-hidden">
            <div className="container mx-auto px-6">
              <div className="text-center mb-16">
                <h3 className="text-5xl font-bold mb-4">11 Modules. One Brain.</h3>
                <p className="text-xl text-gray-400 max-w-3xl mx-auto">Every tool your organization needs, connected through Verge Core</p>
              </div>
              <div className="relative w-full max-w-4xl mx-auto h-96">
                {modules.map((module, idx) => (
                  <div key={module.id} id={`module-${idx}`} className="absolute inset-0 flex items-center justify-center transition-all duration-700 ease-out" style={{opacity: 0, transform: 'scale(0.8)', pointerEvents: 'none'}}>
                    <div className="bg-white/5 backdrop-blur-sm border border-white/10 rounded-3xl p-12 w-full max-w-2xl">
                      <div className={`w-20 h-20 bg-gradient-to-br ${module.color} rounded-2xl flex items-center justify-center mb-6 mx-auto`}>
                        <module.icon className="w-10 h-10" />
                      </div>
                      <h4 className="text-4xl font-bold mb-3 text-center">{module.name}</h4>
                      <p className="text-lg text-purple-400 mb-6 italic text-center">{module.tagline}</p>
                      <p className="text-gray-300 mb-8 text-center text-lg">{module.desc}</p>
                      <div className="grid grid-cols-2 gap-4">
                        {module.features.map((feature, i) => (
                          <div key={i} id={`feature-${idx}-${i}`} className="flex items-center gap-3 text-gray-400 transition-all duration-300" style={{opacity: 0, transform: 'translateX(-20px)'}}>
                            <CheckCircle2 className="w-5 h-5 text-purple-400 flex-shrink-0" />
                            <span>{feature}</span>
                          </div>
                        ))}
                      </div>
                    </div>
                  </div>
                ))}
              </div>
              <div className="text-center mt-12">
                <div className="flex items-center justify-center gap-2">
                  {modules.map((_, idx) => (
